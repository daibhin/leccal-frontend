<div class="assignment-container">
  <div class="flex fill">
    <div class="flex end">
    {{link-to 'New Assignment' 'assignments.new' (query-params course_id=model.id) class='btn btn-primary'}}
    </div>
  </div>
</div>

<div class="card-container">
  <div class="splitter flex fill flex-center">
    <span class="splitter-text">Active</span>
    <span class="flex fill splitter-line"></span>
  </div>
</div>

<ul class="list list-normal flex with_columns">
  {{#each model.assignments as |assignment|}}
    {{#link-to 'courses.show.assignments.show' assignment.id class='list-normal-item block'}}
      <span class="pre-link">{{assignment.dueDate}}</span>
      <h3>{{assignment.name}}</h3>
      <p>{{assignment.description}}</p>
    {{/link-to}}
  {{/each}}
</ul>

<div class="card-container">
  <div class="splitter flex fill flex-center">
    <span class="splitter-text">DRAFT</span>
    <span class="flex fill splitter-line"></span>
  </div>
</div>

<ul class="list list-normal flex with_columns">
  {{#each model.assignments as |assignment|}}
    {{#link-to 'courses.show.assignments.show' assignment class='list-normal-item block'}}
      <span class="pre-link">{{assignment.dueDate}}</span>
      <h3>{{assignment.name}}</h3>
      <p>{{assignment.description}}</p>
    {{/link-to}}
  {{/each}}
</ul>
