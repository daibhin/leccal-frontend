<div class="card-container">

  <div class="flex end">
  {{link-to 'New Post' 'courses.show.discussions.topic.new' (query-params topic_id=model.id) class='btn btn-primary'}}
  </div>

  <div class="splitter flex fill flex-center">
    <span class="splitter-text">Posts</span>
    <span class="flex fill splitter-line"></span>
  </div>
</div>

<ul class="list list-normal flex with_columns">
  {{#each model.posts as |post|}}
    {{#link-to 'courses.show.discussions.topic.post' post class='list-normal-item block'}}
      <h3>{{post.title}}</h3>
    {{/link-to}}
  {{/each}}
</ul>
